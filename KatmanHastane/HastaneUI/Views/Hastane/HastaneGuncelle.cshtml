@using EntityLayer;
@model EntityLayer.Hastane;
@{
    ViewData["Title"] = "HastaneGuncelle";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h2>HASTANE GÜNCELLE</h2>

<form asp-action="HastaneGuncelle" asp-controller="Hastane" method="post">
    <div class="mb-3" style="display:none">
        <label class="form-label">HASTANE ID</label>
        <input readonly asp-for="hastane_id" type="text" class="form-control">

    </div>
    <div class="mb-3">
        <label class="form-label">HASTANE AD</label>
        <input asp-for="hastane_ad" type="text" class="form-control">

    </div>
    <div class="mb-3">
        <label class="form-label">HASTANE SEHİR</label>
        <input type="text" class="form-control" asp-for="hastane_sehir">
    </div>
    <button type="submit" class="btn btn-primary">HASTANE GÜNCELLE</button>
</form>

